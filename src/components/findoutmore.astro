---
import AstroSVG from '../assets/images/2020/08/DSC_2011-Edit_o.jpeg'
import TailwindSVG from '../assets/images/2020/08/DSC_2011-Edit_o.jpeg'
import HTMLSVG from '../assets/images/2020/08/DSC_2011-Edit_o.jpeg'

const callouts = [
  {
    name: 'Astro',
    description: 'Build faster websites with less client-side Javascript',
    imageSrc: AstroSVG.src,
    imageAlt: 'Astro logo',
    href: 'https://astro.build'
  },
  {
    name: 'TailwindCSS/UnoCSS',
    description:
      'A utility-first CSS framework that can be composed to build any design, directly in your markup, realised via the UnoCSS engine',
    imageSrc: TailwindSVG.src,
    imageAlt: 'TailwindCSS drawing',
    href: 'https://tailwindcss.com'
  },
  {
    name: 'HTML/CSS/Javascript',
    description: 'The core building blocks of the web',
    imageSrc: HTMLSVG.src,
    imageAlt: 'Core Web',
    href: 'https://w3.org'
  }
]
---

<div class='bg-purple-100 dark:bg-purple-900'>
  <div class='mx-auto max-w-7xl px-4 lg:px-8 sm:px-6'>
    <div class='mx-auto max-w-2xl py-16 lg:max-w-none lg:py-32 sm:py-24'>
      <h2 class='text-4xl text-purple-800 font-extrabold dark:text-purple-100'>Find Out More</h2>
      <div class='mt-6 lg:grid lg:grid-cols-3 lg:gap-x-6 space-y-12 lg:space-y-0'>
        {
          callouts.map((callout) => (
            <div class='group relative'>
              <div class='sm:aspect-h-1 sm:aspect-w-2 lg:aspect-h-1 lg:aspect-w-1 relative h-80 w-full overflow-hidden rounded-lg bg-white sm:h-64 dark:bg-purple-600 group-hover:opacity-75'>
                <img
                  src={callout.imageSrc}
                  alt={callout.imageAlt}
                  class='h-full w-full object-contain object-center'
                  loading='lazy'
                />
              </div>
              <h3 class='mt-6 text-2xl text-purple-500 dark:text-purple-300'>
                <a href={callout.href}>
                  <span class='absolute inset-0' />
                  {callout.name}
                </a>
              </h3>
              <p class='text-base text-gray-900 dark:text-gray-100'>{callout.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
